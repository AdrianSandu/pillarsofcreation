{% if not chapter %}
    {% set chapter = 0 %}
{% endif %}

<section class="py-5 bg-light">
    <div class="container">
        <div class="fs-3 mb-3">
            Chapters
        </div>
        <nav>
            <ol class="list-group border border-0" start="0">
                {% for part, chapterTitle in site.chapters %}
                    <li class="list-group-item border border-0 p-0 mb-1">
                        {% if chapter != loop.index - 1 %}
                            {% set chapterPath = ["/chapters/", loop.index - 1, "/"] | join %}

                            {% if loop.index == 1 %}
                                {% set chapterPath = "/" %}
                            {% endif %}

                            <a href="{{ chapterPath }}" class="btn btn-light btn-lg w-100 text-start">
                                <span class="badge text-bg-light text-end" style="width: 5ch">
                                    {{ loop.index - 1 }}.
                                </span>
                                {{ chapterTitle }}
                            </a>
                        {% else %}
                            <button class="btn btn-primary btn-lg w-100 text-start" disabled>
                                <span class="badge text-bg-primary text-end" style="width: 5ch">
                                    {{ loop.index - 1 }}.
                                </span>
                                {{ chapterTitle }}
                            </button>
                        {% endif %}
                    </li>
                {% endfor %}
            </ol>
        </nav>
    </div>
</section>